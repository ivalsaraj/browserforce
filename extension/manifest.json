{
  "manifest_version": 3,
  "name": "BrowserForce",
  "version": "1.0.0",
  "description": "Bridge AI agents to your real Chrome browser via transparent CDP relay",
  "permissions": [
    "debugger",
    "tabs",
    "tabGroups",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BrowserForce",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  }
}
