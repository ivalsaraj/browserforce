{
  "manifest_version": 3,
  "name": "BrowserForce",
  "version": "1.0.0",
  "description": "Give AI agents your real Chrome browser â€” your logins, cookies, and tabs. Works with OpenClaw, Claude, and any MCP agent.",
  "permissions": [
    "debugger",
    "tabs",
    "tabGroups",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BrowserForce",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  }
}
